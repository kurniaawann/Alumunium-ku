generator client {
  provider = "prisma-client-js"
   previewFeatures = ["groupBy", "nativeTypes"]
}

datasource db {
  provider = "mysql" // Ganti dengan "mysql" / "sqlite" sesuai database kamu
  url      = env("DATABASE_URL")
}

enum ChangeType {
  IN
  OUT
  USED
  OUT_EDIT
  OUT_DELETE
  IN_EDIT
  IN_DELETE
}

enum Role {
  user
  admin
}

enum Status {
  PENDING
  PROGRESS
  COMPLETED
  CANCELLED 
}

model User {
  userId        String   @id  @map("user_id")         // Primary key
  userName      String   @db.VarChar(255) @map("user_name")
  noHandphone   String   @unique @db.VarChar(15) @map("no_handphone")                                       // Nama user
  email         String   @unique @db.VarChar(255)                                                         // Email user
  password      String                                                          // Password user (hash)
  createdAt     DateTime  @default(now())        @map("created_at")
  isVerified    Boolean  @default(false) @map("is_verified")  
  role Role @default(user)

  otp          Otp []      // Relasi ke Otp
  stockLogs    StockLog[]                                             // Relasi ke stock_logs

  @@map("user")
}

model Otp {
  userId       String        @unique @map("user_id")
  otpCode      String        @db.VarChar(6)  @map("otp_code")
  createdAtOtp DateTime   @default(now())  @map("created_at_otp")
  expiresAtOtp DateTime?   @map("expires_at_otp")
  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)
  

  @@map("otp") 
}

model Authentication {
  id           String   @id @default(uuid())
  accessToken String  @db.Text @map("access_token")

  @@map("authentication")
}


model Item {
  itemId     String       @id  @map("item_id")
  itemName   String       @db.VarChar(255) @map("item_name")
  itemCode   Int?         @map("item_code")
  stock      Int
  height     Float?       @db.Double
  width      Float?       @db.Double
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")

  incomingItems IncomingItem[]
  outgoingItems OutgoingItem[]
  stockLog      StockLog[]

  @@map("items")
}

model IncomingItem {
  incomingItemsId String      @id  @map("incoming_items_id") 
  itemId          String                                    @map("item_id")     // Foreign key ke items
  quantity        Int                                                             // Jumlah barang masuk
  receivedBy      String    @db.VarChar(255)             @map("received_by")     // Diterima oleh siapa
  priceIncomingItem Int
  createdAt       DateTime  @default(now())                          @map("created_at")     // Tanggal barang masuk
  updatedAt  DateTime     @updatedAt @map("updated_at")

  item            Item      @relation(fields: [itemId], references: [itemId], onDelete: Cascade)    // Relasi ke Item

  @@map("incoming_items")
}

model OutgoingItem {
  outgoingItemsId String    @id                      @map("outgoing_items_id")     // Primary key (relasi langsung)
  itemId          String                              @map("item_id")               // Foreign key ke item
  quantity        Int                                                             // Jumlah barang keluar
  sentTo          String @db.VarChar(100)          @map("sent_to")              // Barang dikirim ke mana
  handledBy       String @db.VarChar(100)          @map("handled_by")           // Ditangani oleh siapa
  description     String @db.Text                                    
  createdAt       DateTime  @default(now())                          @map("created_at")                  // Keterangan tambahan (opsional)

  item            Item         @relation(fields: [itemId], references: [itemId], onDelete: Cascade)                   // Relasi ke item

  @@map("outgoing_items")
}

model StockLog {
  logId      String       @id                           @map("log_id")
  userId     String                                             @map("user_id")      // Foreign key ke User
  itemId       String                                     @map("item_id")           // Barang apa yang diubah
  changeType ChangeType                                         @map("change_type")  // Jenis perubahan stok: IN / OUT
  quantity   Int                                                                 // Jumlah yang berubah
  beforeStock  Int?                                       @map("before_stock")      // Stok sebelum
  afterStock   Int?                                       @map("after_stock")       // Stok setelah
  description String    @db.Text                                                  // Deskripsi aktivitas
  createdAt  DateTime   @default(now())                 @map("created_at")         // Waktu log dibuat

  user       User       @relation(fields: [userId], references: [userId], onDelete: Cascade)
  item         Item         @relation(fields: [itemId], references: [itemId], onDelete: Cascade)  

  @@map("stock_logs")
}

model ProjectItem {
  projectItemId      String     @id @map("project_item_id")
  name    String
  price   Int     // harga per 1 unit/batang
  projectItemOnProject    ProjectItemOnProject[]
}

model Project {
  projectId          String           @id @map("project_id")
  projectName String  @map("project_name")
  description String
  address String  
  startDate   DateTime @map("start_date")
  endDate     DateTime? @map("end_date")
  status      Status @default(PENDING)
  totalCost   Int     @map("total_cost")       // total modal proyek
  projectItems ProjectItemOnProject[]
}

model ProjectItemOnProject {
  projectItemOnProjectId              String   @id @map("project_item_on_project_id") 
  projectId       String @map("project_id")
  projectItemId   String @map("project_item_id")
  quantity        Int 
  priceAtThatTime Int @map("price_at_that_time") 

  project Project @relation(fields: [projectId], references: [projectId], onDelete: Cascade)
  projectItem    ProjectItem @relation(fields: [projectItemId], references: [projectItemId], onDelete: Cascade)
}
